{
  "name": "claude-session-tracker",
  "displayName": "Claude Session Tracker",
  "description": "Track and resume Claude Code sessions easily after crashes or disconnections",
  "version": "0.4.0",
  "publisher": "aldea",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "claudeSessionBrowser",
          "name": "Claude Sessions",
          "contextualTitle": "Claude Sessions"
        }
      ]
    },
    "commands": [
      {
        "command": "claude-tracker.resumeLast",
        "title": "Resume Last Claude Session",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.pickSession",
        "title": "Pick Claude Session to Resume",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.showSessions",
        "title": "Show Recent Claude Sessions",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.focusTerminal",
        "title": "Focus Active Claude Terminal",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.showAllTerminals",
        "title": "View Claude Sessions",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.showAllSessions",
        "title": "Browse All Claude Sessions (All Projects)",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.recoverSessions",
        "title": "Recover Claude Sessions from Crash",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.resumeAll",
        "title": "Resume All Crashed Claude Sessions",
        "category": "Claude"
      },
      {
        "command": "claude-tracker.refreshSessions",
        "title": "Refresh Claude Sessions",
        "category": "Claude",
        "icon": "$(refresh)"
      },
      {
        "command": "claude-tracker.resumeSession",
        "title": "Resume This Session",
        "category": "Claude"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "claude-tracker.refreshSessions",
          "when": "view == claudeSessionBrowser",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "claude-tracker.resumeSession",
          "when": "view == claudeSessionBrowser && viewItem == claudeSession"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claude-tracker.resumeLast",
        "key": "cmd+shift+c",
        "mac": "cmd+shift+c",
        "when": "!terminalFocus"
      }
    ],
    "configuration": {
      "title": "Claude Session Tracker",
      "properties": {
        "claudeTracker.autoResume": {
          "type": "boolean",
          "default": false,
          "description": "Automatically offer to resume last session when opening a workspace"
        },
        "claudeTracker.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show Claude session status in status bar"
        },
        "claudeTracker.showCostInStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show session cost in status bar when active"
        },
        "claudeTracker.showEnrichedData": {
          "type": "boolean",
          "default": true,
          "description": "Show model, turn count, and cost in session browser and quick picks"
        },
        "claudeTracker.hideSidechainSessions": {
          "type": "boolean",
          "default": true,
          "description": "Hide observer/sidechain sessions from session browser"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
